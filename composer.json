{
    "name": "zenstruck/filesystem",
    "description": "Wrapper for league/flysystem with alternate API and added functionality.",
    "homepage": "https://github.com/zenstruck/filesystem",
    "type": "library",
    "license": "MIT",
    "keywords": ["filesystem", "flysystem"],
    "authors": [
        {
            "name": "Kevin Bond",
            "email": "kevinbond@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "league/flysystem": "^3.0",
        "symfony/filesystem": "^5.4|^6.0",
        "symfony/finder": "^5.4|^6.0",
        "zenstruck/dimension": "^0.1.0",
        "zenstruck/uri": "^1.0"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/orm": "^2.12",
        "league/flysystem-memory": "^3.0",
        "league/flysystem-ziparchive": "^3.2",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5.0",
        "symfony/expression-language": "^5.4|^6.0",
        "symfony/framework-bundle": "^5.4|^6.0",
        "symfony/mime": "^5.4|^6.0",
        "symfony/phpunit-bridge": "^6.0",
        "symfony/var-dumper": "^5.4|^6.0",
        "twig/twig": "^2.0|^3.0",
        "zenstruck/assert": "^1.2"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Zenstruck\\": ["src/"] }
    },
    "autoload-dev": {
        "psr-4": { "Zenstruck\\Filesystem\\Tests\\": ["tests/"] }
    },
    "suggest": {
        "league/flysystem-memory": "To use the in-memory adapters",
        "league/flysystem-ziparchive": "To use ArchiveFile as a filesystem",
        "doctrine/dbal": "To use the File/Image/FileCollection types",
        "zenstruck/assert": "To use the TestFilesystem assertions",
        "symfony/framework-bundle": "To use the provided Symfony bundle"
    }
}
