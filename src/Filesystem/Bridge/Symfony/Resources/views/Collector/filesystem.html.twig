{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% if collector.data.total_operations %}
        {% set icon %}
            {{ source('@ZenstruckFilesystem/Collector/filesystem.svg') }}
            <span class="sf-toolbar-value">{{ collector.data.total_operations }}</span>
        {% endset %}

        {% set text %}
            <div class="sf-toolbar-info-piece">
                <b>Total Operations</b>
                <span>{{ collector.data.total_operations }}</span>
            </div>

            <div class="sf-toolbar-info-piece">
                <b>Total Reads</b>
                <span>{{ collector.data.total_reads }}</span>
            </div>

            <div class="sf-toolbar-info-piece">
                <b>Total Writes</b>
                <span>{{ collector.data.total_writes }}</span>
            </div>
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: false }) }}
    {% endif %}
{% endblock %}
